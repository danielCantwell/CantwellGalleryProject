<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/quick_bar_header"
            android:id="@+id/quickBarHeader"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quickBarCurrentItemImage"
            android:src="@android:drawable/ic_input_get"
            android:layout_above="@+id/quickBarCurrentItemText"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/default_directory_title"
            android:id="@+id/quickBarCurrentItemText"
            android:layout_centerInParent="true"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quickBarNewItemImage"
            android:layout_above="@+id/quickBarNewItemText"
            android:layout_centerHorizontal="true"
            android:src="@android:drawable/ic_input_get"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_item"
            android:id="@+id/quickBarNewItemText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>