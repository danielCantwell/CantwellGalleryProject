<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:id="@+id/contentPaneDragArea"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/contentPaneHeader"
            android:background="#98aaed"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:id="@+id/contentPaneHeader"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contentPaneListView"
            android:layout_below="@+id/contentPaneHeader"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/contentPaneDragArea"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topArrow"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/contentPaneHeader"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomArrow"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>