<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="@android:drawable/list_selector_background"
              android:focusable="false"
              android:gravity="center_horizontal">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/quick_bar_width"
            android:id="@+id/quickBarItemImageView"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@android:drawable/ic_input_get"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/quickBarItemTextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="@string/default_directory_title"
            android:layout_below="@+id/quickBarItemImageView"
            android:layout_centerInParent="true"/>

</RelativeLayout>